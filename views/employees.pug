doctype html
html
  head
    title Employees List
    link(rel='stylesheet' href='https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css')
    script(src='https://code.jquery.com/jquery-3.5.1.min.js')
    script(src='https://cdn.datatables.net/1.10.21/js/jquery.dataTables.min.js')
    script(src='https://cdn.datatables.net/1.10.21/js/dataTables.bootstrap4.min.js')
    link(rel='stylesheet' href='https://cdn.datatables.net/1.10.21/css/dataTables.bootstrap4.min.css')

  body
    .container
      h1 Employees List
      a.btn.btn-primary(href='/employees/add') Add New Employee
      table.table.table-bordered#employeesTable
        thead
          tr
            th ID
            th Name
            th Designation
            th Status
            th Actions
        tbody
          each employee in employees
            tr
              td= employee.id
              td= employee.name
              td= employee.designation
              td= employee.status
              td
                a.btn.btn-warning(href=`/employees/edit/${employee.id}`) Edit
                form(action=`/employees/delete/${employee.id}` method='POST' style='display:inline')
                  button.btn.btn-danger(type='submit') Delete

    script.
      $(document).ready(function() {
        $('#employeesTable').DataTable();
      });
